<?xml version="1.0" encoding="UTF-8" ?>
<root>
<!-- START OF PRICE INFO PARAMETERS -->
	<ctryconfig>
		<setting func="currencychar">
			<![CDATA[$]]>
		</setting>
		<setting func="priceformat">
			<![CDATA[#C# #P#]]>
		</setting>
		<setting func="abbrchars">
			<![CDATA[]]>
		</setting>				
		<setting func="hpstorename">
			<![CDATA[]]>
		</setting>
		<setting func="startpricemultiple">
			<![CDATA[<span class="bold">Price starting from<br>#PF#<br>#VAT#</span>]]>
		</setting>
		<setting func="startpricesingle">
			<![CDATA[<span class="bold">Price<br>#PF#<br>#VAT#</span>]]>
		</setting>
	</ctryconfig>
<!-- START OF SCREEN INFO PARAMETERS -->
	<text>
		<field func="intro">
			<![CDATA[Ready to buy?]]>
		</field>
		<field func="promo">
		<![CDATA[HP Best Buy]]> 
		</field>
		<field func="pricedesc">
			<![CDATA[Price]]>
		</field>
		<field func="pricedescinfo">
			<![CDATA[Excluding local taxes and custom duties as applicable in country.]]>
		</field>
		<field func="vat" incl="0">
			<![CDATA[Exc tax]]>
		</field>
		<field func="telnr">
			<![CDATA[]]>
		</field>
		<field func="lbintro">
			<![CDATA[Select authorised partner]]>
		</field>
		<field func="lbvat">
			<![CDATA[]]>
		</field>
		<field func="warning">
			<![CDATA[Please select a partner]]>
		</field>	
		<field func="stock">
			<![CDATA[limited stock]]>
		</field>	
		<field func="bp1">
			<![CDATA[Thank you for selecting an]]>
		</field>		
		<field func="bp2">
			<![CDATA[In 5 seconds you will leave the HP website]]>
		</field>																
	</text>
<!-- START OF CHANNEL EXPERIENCE -->	
	<buttons id="channel">
		<btn func="viewshops" type="primary">
			<label><![CDATA[Authorised HP partner]]></label>
			<txt id="sub">
				<txt><![CDATA[]]></txt>
				<txt><![CDATA[Recommended online retailer or find a local partner]]></txt>
			</txt>			
		</btn>
		<btn func="buy" type="commerce">
			<label><![CDATA[Buy now]]></label>
			<action>buy</action>
		</btn>		
		<btn func="findreseller" type="secondary">
			<label><![CDATA[Find a local partner]]></label>
			<txt id="sub">
				<txt><![CDATA[Find a local partner]]></txt>
			</txt>			
		</btn>			
		<btn func="gonow" type="primary">
			<label><![CDATA[Go now]]></label>
			<action>buy</action>
		</btn>
	</buttons>
<!-- START OF NEUTRAL EXPERIENCE -->	
	<buttons id="neutral">
		<btn func="addbasket" type="primary">
			<label><![CDATA[Add to basket]]></label>
			<txt id="sub">
				<txt><![CDATA[Immediate Availability]]></txt>
				<txt><![CDATA[Normally within 2 weeks]]></txt>
				<txt><![CDATA[Normally within 4 weeks]]></txt>								
			</txt>
			<link>
    			<label>Customise this product</label>
			    <action>config</action>
		   	</link> 			
		</btn>	
		<btn func="viewshops" type="secondary">
			<label><![CDATA[Buy from an HP partner]]></label>
			<txt id="sub">
				<txt><![CDATA[Buy online from an HP preferred partner]]></txt>
			</txt>			
		</btn>
		<btn func="buy" type="commerce">
			<label><![CDATA[Buy now]]></label>
			<action>buy</action>
		</btn>		
	    <btn func="customize" type="primary">
	 		<label><![CDATA[Customise]]></label>
	        <txt id="sub">
     		   <txt><![CDATA[Customise and buy directly from HP]]></txt>
        	</txt>
		    <action>config</action>
		</btn>				
		<btn func="findreseller" type="secondary">
			<label><![CDATA[Find a local partner]]></label>
			<txt id="sub">
				<txt><![CDATA[Find a local partner]]></txt>
			</txt>			
		</btn>			
		<btn func="gonow" type="primary">
			<label><![CDATA[Go now]]></label>
			<action>buy</action>
		</btn>
	</buttons>
<!-- START OF DIRECT EXPERIENCE -->	
	<buttons id="direct">
		<btn func="addbasket" type="commerce">
			<label><![CDATA[Add to basket]]></label>
			<txt id="sub">
				<txt><![CDATA[Immediate Availability]]></txt>
				<txt><![CDATA[Normally within 2 weeks]]></txt>
				<txt><![CDATA[Normally within 4 weeks]]></txt>								
			</txt>
			<link>
    			<label>Customise this product</label>
			    <action>config</action>
		   	</link> 			
		</btn>	
		<btn func="basketadded" type="commerce">
			<label><![CDATA[View cart & check out]]></label>
			<txt id="pre">
				<txt><![CDATA[This item ws added to your cart]]></txt>
			</txt>
		</btn>
	    <btn func="customize" type="primary">
	 		<label><![CDATA[Customise]]></label>
	        <txt id="sub">
     		   <txt><![CDATA[Customise and buy directly from HP]]></txt>
        	</txt>
		    <action>config</action>
		</btn>				
	</buttons>
<!-- START OF DYNAMIC PARAMETERS -->
	<dynamic>
		<jscontext>
			<text>
				<field func="priceformat" cond="s_ProductLine=KV">
					<![CDATA[#C# #P#]]>
				</field>
			</text>
		</jscontext>
	</dynamic>
</root>